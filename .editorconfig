# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
tab_width = 4
indent_size = 4
charset = utf-8
end_of_line = lf
indent_style = space
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

